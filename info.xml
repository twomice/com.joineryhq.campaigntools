<?xml version="1.0"?>
<extension key="com.joineryhq.campaigntools" type="module">
  <file>campaigntools</file>
  <name>Joinery Campaign Tools</name>
  <description>Collection of usability improvements for CiviCampaign</description>
  <license>GPL-3.0</license>
  <maintainer>
    <author>Allen Shaw</author>
    <email>allen@joineryhq.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/twomice/com.joinery.campaigntools/</url>
    <url desc="Documentation">https://github.com/twomice/com.joinery.campaigntools</url>
    <url desc="Support">https://github.com/twomice/com.joinery.campaigntools/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/gpl-3.0.html</url>
  </urls>
  <releaseDate>2021-06-04</releaseDate>
  <version>1.2</version>
  <develStage>prod</develStage>
  <compatibility>
    <ver>5.27</ver>
  </compatibility>
  <comments>Adds "campaign" column to Activities tab; accepts "campaign" URL parameter in contributions pages and event pages. Initial development sponsored by CiviTeacher and their client.</comments>
  <civix>
    <namespace>CRM/Campaigntools</namespace>
    <format>25.01.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
